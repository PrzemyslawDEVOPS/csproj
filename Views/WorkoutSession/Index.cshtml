@model IEnumerable<WorkoutSession>
@{
    ViewData["Title"] = "Sesje treningowe";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-calendar-check"></i> Sesje treningowe</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Dodaj nową sesję
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Nie masz jeszcze żadnych sesji treningowych. Dodaj pierwszą sesję!
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th><i class="bi bi-hash"></i> ID</th>
                            <th><i class="bi bi-play-circle"></i> Data rozpoczęcia</th>
                            <th><i class="bi bi-stop-circle"></i> Data zakończenia</th>
                            <th><i class="bi bi-clock"></i> Czas trwania</th>
                            <th class="text-end"><i class="bi bi-gear"></i> Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var duration = item.EndTime - item.StartTime;
                            <tr>
                                <td>@item.WorkoutSessionId</td>
                                <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@duration.ToString(@"hh\:mm")</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.WorkoutSessionId" class="btn btn-sm btn-info me-1">
                                        <i class="bi bi-eye"></i> Szczegóły
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.WorkoutSessionId" class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil"></i> Edytuj
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.WorkoutSessionId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Usuń
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

