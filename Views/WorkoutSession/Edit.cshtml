@model WorkoutSession
@{
    ViewData["Title"] = "Edytuj sesję treningową";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Edytuj sesję treningową</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="WorkoutSessionId" />
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label fw-semibold">
                                <i class="bi bi-play-circle"></i> @Html.DisplayNameFor(m => m.StartTime)
                            </label>
                            <input asp-for="StartTime" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label fw-semibold">
                                <i class="bi bi-stop-circle"></i> @Html.DisplayNameFor(m => m.EndTime)
                            </label>
                            <input asp-for="EndTime" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                            <small class="form-text text-muted">Data zakończenia musi być późniejsza niż data rozpoczęcia.</small>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Anuluj
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Zapisz zmiany
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

