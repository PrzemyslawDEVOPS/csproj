@model WorkoutSession
@{
    ViewData["Title"] = "Usuń sesję treningową";
}

<h2>Usuń sesję treningową</h2>

<h3>Czy na pewno chcesz usunąć tę sesję?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID Sesji</dt>
        <dd class="col-sm-10">@Model.WorkoutSessionId</dd>
        <dt class="col-sm-2">Data rozpoczęcia</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">Data zakończenia</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="WorkoutSessionId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>

