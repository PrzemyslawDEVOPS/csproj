@model Exercise
@{
    ViewData["Title"] = "Szczegóły ćwiczenia";
}

<h2>Szczegóły ćwiczenia</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nazwa</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ExerciseId" class="btn btn-warning">Edytuj</a>
        <a asp-action="Delete" asp-route-id="@Model.ExerciseId" class="btn btn-danger">Usuń</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

