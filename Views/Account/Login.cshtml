@model LoginViewModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0"><i class="bi bi-box-arrow-in-right"></i> Logowanie</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="twoj@email.pl" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bi bi-lock"></i> Hasło
                            </label>
                            <input asp-for="Password" class="form-control" placeholder="Wprowadź hasło" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">
                                Zapamiętaj mnie
                            </label>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Zaloguj się
                            </button>
                        </div>
                        <div class="text-center mt-3">
                            <p class="mb-0">Nie masz konta? <a asp-action="Register" class="text-primary fw-semibold">Zarejestruj się</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

