@model WorkoutSessionDetail
@{
    ViewData["Title"] = "Usuń szczegół treningu";
}

<h2>Usuń szczegół treningu</h2>

<h3>Czy na pewno chcesz usunąć ten szczegół?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Ćwiczenie</dt>
        <dd class="col-sm-10">@(Model.Exercise?.Name ?? "N/A")</dd>
        <dt class="col-sm-2">ID Sesji</dt>
        <dd class="col-sm-10">@Model.WorkoutSessionId</dd>
        <dt class="col-sm-2">Serie</dt>
        <dd class="col-sm-10">@Model.Sets</dd>
        <dt class="col-sm-2">Powtórzenia</dt>
        <dd class="col-sm-10">@Model.Repetitions</dd>
        <dt class="col-sm-2">Waga (kg)</dt>
        <dd class="col-sm-10">@Model.Weight</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="WorkoutSessionDetailId" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>

