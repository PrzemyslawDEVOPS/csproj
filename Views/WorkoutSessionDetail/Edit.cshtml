@model WorkoutSessionDetail
@{
    ViewData["Title"] = "Edytuj szczegół treningu";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h3 class="mb-0"><i class="bi bi-pencil"></i> Edytuj szczegół treningu</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="WorkoutSessionDetailId" />
                        <div class="mb-3">
                            <label asp-for="ExerciseId" class="form-label fw-semibold">
                                <i class="bi bi-barbell"></i> Ćwiczenie
                            </label>
                            <select asp-for="ExerciseId" class="form-control" asp-items="ViewBag.ExerciseId">
                                <option value="">-- Wybierz ćwiczenie --</option>
                            </select>
                            <span asp-validation-for="ExerciseId" class="text-danger"></span>
                            <small class="form-text text-muted">Wybierz ćwiczenie, które wykonałeś podczas treningu</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="WorkoutSessionId" class="form-label fw-semibold">
                                <i class="bi bi-calendar-check"></i> Sesja treningowa
                            </label>
                            <select asp-for="WorkoutSessionId" class="form-control" asp-items="ViewBag.WorkoutSessionId">
                                <option value="">-- Wybierz sesję treningową --</option>
                            </select>
                            <span asp-validation-for="WorkoutSessionId" class="text-danger"></span>
                            <small class="form-text text-muted">Wybierz sesję treningową, podczas której wykonałeś to ćwiczenie</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Sets" class="form-label fw-semibold">
                                <i class="bi bi-123"></i> Liczba serii
                            </label>
                            <input asp-for="Sets" class="form-control" type="number" min="1" max="1000" placeholder="np. 3" />
                            <span asp-validation-for="Sets" class="text-danger"></span>
                            <small class="form-text text-muted">Liczba serii (1-1000)</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Repetitions" class="form-label fw-semibold">
                                <i class="bi bi-arrow-repeat"></i> Liczba powtórzeń w serii
                            </label>
                            <input asp-for="Repetitions" class="form-control" type="number" min="1" max="10000" placeholder="np. 10" />
                            <span asp-validation-for="Repetitions" class="text-danger"></span>
                            <small class="form-text text-muted">Liczba powtórzeń w jednej serii (1-10000)</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Weight" class="form-label fw-semibold">
                                <i class="bi bi-speedometer2"></i> Obciążenie (kg)
                            </label>
                            <input asp-for="Weight" class="form-control" type="number" step="0.1" min="0" max="1000" placeholder="np. 50.5" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                            <small class="form-text text-muted">Waga użyta podczas ćwiczenia w kilogramach (0-1000 kg)</small>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Anuluj
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle"></i> Zapisz zmiany
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

